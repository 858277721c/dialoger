<resources>

    <style name="lib_dialoger_default" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="lib_dialoger_anim_bottom_bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/lib_dialoger_anim_slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/lib_dialoger_anim_slide_out_to_bottom</item>
    </style>

    <style name="lib_dialoger_anim_top_top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/lib_dialoger_anim_slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/lib_dialoger_anim_slide_out_to_top</item>
    </style>

    <style name="lib_dialoger_anim_left_left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/lib_dialoger_anim_slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/lib_dialoger_anim_slide_out_to_left</item>
    </style>

    <style name="lib_dialoger_anim_right_right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/lib_dialoger_anim_slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/lib_dialoger_anim_slide_out_to_right</item>
    </style>

    <color name="lib_dialoger_background_dim">#66000000</color>

</resources>